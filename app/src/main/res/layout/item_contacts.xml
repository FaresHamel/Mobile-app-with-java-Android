<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"

    android:layout_marginBottom="25dp"

    android:paddingRight="10dp"

    android:paddingLeft="10dp"

    >
    <androidx.cardview.widget.CardView
        android:id="@+id/view_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingBottom="10dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingTop="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:strokeWidth="10dp"
        app:strokeColor="#221B1B"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/image_content_view"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:scaleType="centerCrop"
                android:contentDescription="wilkomen Heer fares Hamel"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                >

                <View
                    android:layout_marginBottom="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E64A19"
                    />

                <TextView
                    android:id="@+id/name_travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#5E0D0D"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    />

                <TextView
                    android:id="@+id/description_tytle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masondre"
                    android:paddingTop="8dp"
                    android:textColor="#808080"
                    />
                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textColor="#808080"
                    android:ellipsize="marquee"
                    android:maxLines="5"
                    android:textAllCaps="false"
                    android:gravity="left"
                    />
                <RatingBar
                    android:id="@+id/rating_Bar_prosontag"
                    android:layout_width="wrap_content"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_height="44dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingBottom="0dp"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:transformPivotX="10dp"
                    android:transformPivotY="24dp"
                    android:theme="@style/RatingBar"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                >

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/botton_contact"
                    android:maxLines="1"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/botton_contact_zwei"
                    android:text="@string/wilkommen"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>


